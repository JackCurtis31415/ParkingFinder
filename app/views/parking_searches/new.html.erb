<div class="row large-offset-4 white-text">
  <%- if @parking_search.errors.present? -%>
    <div class="center alert-box alert" data-alert>
      <ul>
        <%- @parking_search.errors.full_messages.each do |error| -%>
          <li><%= error %></li>
        <%- end -%>
      </ul>
    </div>
  <%- end -%>

  <div class="large-12">
    <h1>New Parking Search</h1>
    <%= form_for @parking_search do |f| %>
      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :state %>
      <%= f.text_field :state %>

      <%= f.submit "Search", class: :button %>
      <%= link_to "Back", parking_searches_path, class: :button %>

      <% end %>
  </div>
</div>
